generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "${env(DB_PROVIDER)}"
  url      = "${env(DB_PROVIDER)}://${env(DB_USER)}:${env(DB_PASSWORD)}@${env(DB_HOST)}:${env(DB_PORT)}/${env(DB_NAME)}${if(env("DB_ARGUMENTS"), "?" + env("DB_ARGUMENTS"), "")}"
}
